resharper_arrange_static_member_qualifier_highlighting = suggestion
resharper_entity_framework_model_validation_unlimited_string_length_highlighting = suggestion
resharper_mvc_action_not_resolved_highlighting = suggestion
resharper_mvc_area_not_resolved_highlighting = suggestion
resharper_mvc_controller_not_resolved_highlighting = suggestion
resharper_mvc_masterpage_not_resolved_highlighting = suggestion
